<?xml version="1.0"?> 
<project name="BuildProject" default="compile">

          <property name="build-dir" value="build"/>
          <property name="dist-dir" value="dist"/>
          <property name="src-dir" value="src"/>
          <property name="lib-dir" value="lib"/>

	   <target name="init"> 
           <echo>Running target init</echo> 	
           </target>
 
           <target name="clean" depends="init">
           <echo>Running target clean</echo> 
           <delete dir="${build-dir}" />
           </target> 
		
           <target name="compile" depends="clean">
           <mkdir dir="${build-dir}"/>
           <javac srcdir="${src-dir}" destdir="${build-dir}" classpath="${lib-dir}/" /> 		          
           <echo>Running target compile</echo> 	
           </target>

           <target name="test" depends="compile">                
           <echo>Running target compile</echo>
           </target>

           <target name="mkdist" depends="test">
           <echo>Running target compile</echo>
       	   </target>
 
</project>
